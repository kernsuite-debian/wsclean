FROM debian:10

RUN export DEBIAN_FRONTEND=noninteractive && apt-get update && \
    apt-get install -y \
    git \
    cmake \
    build-essential \
    g++ \
    pkg-config \
    casacore-data casacore-dev \
    libblas-dev liblapack-dev \
    python3 \
    libpython3-dev \
    libboost-date-time-dev libboost-test-dev \
    libboost-program-options-dev libboost-system-dev libboost-filesystem-dev \
    libcfitsio-dev \
    libfftw3-dev \
    libgsl-dev \
    libhdf5-dev \
    libopenmpi-dev \
    libpng-dev \
    pkg-config \
    python3-dev python3-numpy \
    python3-sphinx \
    python3-pip \
    wget && \
  pip3 install pytest

ADD . /src
WORKDIR /src

RUN \
  mkdir /build && \
  cd /build && \
  cmake ../src && \
  make -j`nproc` && \
  make install && \
  wsclean --version
  
