+  template <typename LHS_T, typename RHS_T>
+  static void Assign(std::complex<LHS_T>* dest,
+                     const std::complex<RHS_T>* source) {
+    for (size_t p = 0; p != 4; ++p) dest[p] = source[p];
+  }
+
+  /**
