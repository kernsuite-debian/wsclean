+  const char* c = s.c_str();
+  size_t pos = 0;
+  while (IsWhitespace(c[pos])) ++pos;
+  if (c[pos] == '-') ++pos;
+  while (IsDigit(c[pos])) ++pos;
+  if (c[pos] == '.') ++pos;
+  while (IsDigit(c[pos])) ++pos;
+  if (c[pos] == 'e' || c[pos] == 'E') {
+    ++pos;
+    if (c[pos] == '-' || c[pos] == '+') ++pos;
+    while (IsDigit(c[pos])) ++pos;
+  }
+  return pos;
