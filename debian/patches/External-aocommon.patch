+  BOOST_CHECK_EQUAL(vecC.get_allocator().Id(), 14);
+  BOOST_CHECK_EQUAL_COLLECTIONS(vecB.begin(), vecB.end(), vecC.begin(),
+                                vecC.end());
+  Vec bigvec(1000, 1, IdAllocater<int, std::false_type, std::false_type>(7));
