+  void julianDateToYMD(double jd, int& year, int& month, int& day) const {
+    int z = jd + 0.5;
+    int w = (z - 1867216.25) / 36524.25;
+    int x = w / 4;
+    int a = z + 1 + w - x;
+    int b = a + 1524;
+    int c = (b - 122.1) / 365.25;
+    int d = 365.25 * c;
+    int e = (b - d) / 30.6001;
+    int f = 30.6001 * e;
+    day = b - d - f;
+    while (e - 1 > 12) e -= 12;
+    month = e - 1;
+    year = c - 4715 - ((e - 1) > 2 ? 1 : 0);
+  }
